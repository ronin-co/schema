{
  "name": "@ronin/schema",
  "version": "0.1.5",
  "type": "module",
  "description": "Allows for defining the schema of a RONIN database in code.",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./schema": "./dist/schema",
    "./queries": "./dist/queries"
  },
  "scripts": {
    "lint": "bun run --bun lint:tsc && bun run --bun lint:biome",
    "lint:biome": "biome check",
    "lint:tsc": "tsc --pretty",
    "format": "biome check --write && biome format --write",
    "test": "bun test",
    "build": "tsup",
    "prepare": "bun run build"
  },
  "keywords": [
    "database",
    "schema",
    "primitives"
  ],
  "author": "ronin",
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@ronin/compiler": "0.13.8",
    "@types/bun": "1.1.14",
    "ronin": "5.3.5",
    "tsup": "8.3.5"
  }
}
